<style>
    @@import url('https://fonts.googleapis.com/css2?family=Cedarville+Cursive&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
    
    .Skip
    {
        background-color:#FFCBA2;
        width:150px;
        border-radius: 25px;
        border: 1px solid #E38282;
        display:flex;
        justify-content:center;
        align-items:center;
    }
    .Skip_Heading
    {
        font-family: 'Cedarville Cursive', cursive;
        font-size: 1.5rem;
        font-weight: bold;
        margin-top: 10px;
    }
</style>
<div class="Skip" @onclick="InvokeOnSkip">
    <h1 class="Skip_Heading">SKIP</h1>
</div>

@code
{
    [Parameter]
    public EventCallback OnSkip { get; set; }
    private async Task InvokeOnSkip()
    {
        await OnSkip.InvokeAsync();
    }
}